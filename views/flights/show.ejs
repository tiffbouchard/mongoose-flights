<%- include('../partials/header') %>

<!-- list out the details about the selected flight -->
<section id="show-page">
  <h2>Flight Details</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departure</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.flightNo %></td>
        <td><%= flight.departs %></td>
      </tr>
    </tbody>
  </table>
</section>

<!-- form to enter in destinations for the given flight -->
<section>
  <form method="POST" action="flights/<%= flight.id %>/details">
    <h2>Add Destinations</h2>
    <div class="form-group">
      <label>Destinations</label>
      <select class="form-control" name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
    </div>
    <div class="form-group">
      <label>Arrival</label>
      <input class="form-control" type="datetime-local" name="arrival" />
    </div>
  </form>
</section>

<%- include('../partials/footer') %>
